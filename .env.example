# MeetingBaas API (Bot service for Zoom, Google Meet, Teams)
# Sign up at https://meetingbaas.com to get your API key
# MeetingBaas handles: bot joining, recording, and audio streaming
MEETINGBAAS_API_KEY=your_meetingbaas_api_key_here

# Deepgram API (for real-time transcription)
# Sign up at https://deepgram.com to get your API key
# Provides live transcription during meetings with ~300ms latency
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# OpenAI API (for AI analysis and action item extraction)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Database
DATABASE_URL="file:./dev.db"

# App Configuration
# This is your public URL where MeetingBaas will send webhooks
# For local development with webhooks, use ngrok: https://ngrok.com
# Example: ngrok http 3000 → https://abc123.ngrok.io
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WebSocket Streaming URL for live transcription
# This is where MeetingBaas will push live audio
# For local dev: Run ngrok on port 8080 → wss://abc123.ngrok.io
# Example: wss://your-domain.ngrok.io
WEBSOCKET_STREAMING_URL=wss://your-ngrok-url.ngrok.io

# Note: Zoom API credentials are NOT required
# MeetingBaas handles all meeting platform integrations (Zoom, Meet, Teams)
